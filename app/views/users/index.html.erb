<% if current_user.admin == true %>
  <h1>Users_admin</h1>
<% else %>
  <h1>Users</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>admin</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.admin %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_user_registration_path(user.id) %></td>
        <td><%= link_to 'Destroy', user_registration_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

