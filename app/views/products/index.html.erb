<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name, "製品名" %>
  <%= f.search_field :name_cont %>

  <%= f.label :category, "製品カテゴリー" %>
  <%= f.select :category_eq, [['マウス', 1], ['キーボード', 2], ['バッテリー', 3]], {include_blank: '選択なし'} %>

  <%= f.label :status, "ステータス" %>
  <%= f.select :status_eq, [['開発中', 0], ['製造中', 1], ['製造中止', 2]], {include_blank: '選択なし'} %>

  <%= f.label :location, "製造拠点" %>
  <%= f.select :location_eq, [['未定', 0], ['東京', 1], ['深圳', 2], ['バンコク', 3], ['ダラス', 4]], {include_blank: '選択なし'} %>

  <%= f.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Status</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.category %></td>
        <td><%= product.description %></td>
        <td><%= product.status %></td>
        <td><%= product.location %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
